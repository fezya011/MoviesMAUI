<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessMAUI.AddStudioPage"
             Title="Добавить студию">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label Text="Добавить новую студию"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

            <VerticalStackLayout Spacing="5">
                <Label Text="Название студии" />
                <Entry
                Placeholder="Введите название студии"
                Text="{Binding AddStudio.Name}"/>
            </VerticalStackLayout>


            <VerticalStackLayout Spacing="5">
                <Label Text="Рейтинг студии" />
                <Label x:Name="header"/>
                <Slider Maximum="10" Minimum="0"  Value="{Binding AddStudio.Rating}" ValueChanged="OnSliderValue"/>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Имя директора" />
                <Entry  
                     Placeholder="Введите имя директора" 
                     Text="{Binding AddStudio.DirectorName}"/>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Отчество директора" />
                <Entry  
                     Placeholder="Введите отчество директора" 
                     Text="{Binding AddStudio.DirectorPatronymic}"/>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Фамилия директора" />
                <Entry  
                     Placeholder="Введите фамилию директора" 
                     Text="{Binding AddStudio.DirectorSurname}"/>
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button
                     Text="Сохранить" 
                     Grid.Column="0"
                     BackgroundColor="RoyalBlue"
                     TextColor="White" 
                Clicked="SaveClick"/>

                <Button x:Name="CancelButton" 
                     Text="Отмена" 
                     Grid.Column="1"
                     BackgroundColor="LightGray" /> 
            </Grid>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>